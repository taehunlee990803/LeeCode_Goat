class Solution {
public:
    int singleNumber(vector<int>& nums) {
        int result = nums[0];
        int i =1;
        sort(nums.begin(), nums.end());

        while(i<nums.size())
        {
            if(nums[0] != nums[1])
            {
                result = nums[0];
                break;
            }
            else if(nums[i] != nums[i-1])
            {
                break;
            }
           i+=2;
        }
      
        return result;
    }
};
